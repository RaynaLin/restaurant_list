<h1 class="mx-auto p-3 fs-2" style="width: 200px;">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">中文名稱</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" placeholder="" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="name_en" class="col-sm-2 col-form-label">英文名稱</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name_en" name="name_en" placeholder="" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="category" list="categoryOptions" name="category" required>
        <datalist id="categoryOptions" class="form-select" name="category">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式料理</option>
          <option>酒吧</option>
          <option>咖啡</option>
          <option>中式料理</option>
          <option>其他</option>
        </datalist>
      </div>
    </div>
    <div class="row mb-3">
      <label for="image" class="col-sm-2 col-form-label">圖片連結</label>
      <div class="col-sm-10">
        <input class="form-control" type="url" id="image" name="image">
      </div>
    </div>

    <div class="row mb-3">
      <label for="location" class="col-sm-2 col-form-label">地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="location" name="location" placeholder="台北市松山區市民大道四段 185 號" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="phone" class="col-sm-2 col-form-label">電話</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="phone" name="phone" placeholder="02-2570-1255" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="google_map" class="col-sm-2 col-form-label">Google地圖連結</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" id="google_map" name="google_map" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="rating" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="rating" name="rating" min="0" max="5" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="description" class="col-sm-2 col-form-label">描述</label>
      <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-outline-primary">新增</button>
      <a href="/">
        <button type="button" class="btn btn-outline-primary">
          返回首頁
        </button>
      </a>
    </div>

  </form>
</div>